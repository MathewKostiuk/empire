  {
    "name": "Products",
    "settings": [
      {
        "type": "checkbox",
        "id": "product_show_vendor",
        "label": "Show vendor",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "product_show_sku",
        "label": "Show SKU",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "enable_image_zoom",
        "label": "Enable image zoom",
        "default": false,
        "info": "Note: For the best results, make sure your images are larger than 1600px."
      },
      {
        "id": "image_zoom_level",
        "type": "select",
        "label": "Initial image zoom level",
        "options": [
          {
            "value": "min",
            "label": "Minimum zoom"
          },
          {
            "value": "max",
            "label": "Maximum zoom"
          }
        ],
        "default": "min"
      },
      {
        "type": "checkbox",
        "id": "product_enable_recently_viewed_products",
        "label": "Enable recently viewed products",
        "default": false,
        "info": "Note: This will display on both the collection and product pages."
      },
      {
        "id": "product_option_style",
        "type": "select",
        "label": "Option style",
        "options": [
          {
            "value": "select",
            "label": "Dropdown"
          },
          {
            "value": "radio",
            "label": "Selectable boxes"
          }
        ],
        "default": "select"
      },
      {
        "type": "checkbox",
        "id": "product_sales_badge",
        "label": "Enable sale badges",
        "default": true
      },
      {
        "id": "product_sales_badge_style",
        "type": "select",
        "label": "Sale badge style",
        "options": [
          {
            "value": "percentile",
            "label": "Save 10%"
          },
          {
            "value": "money",
            "label": "Save $10"
          },
          {
            "value": "text",
            "label": "Sale"
          }
        ],
        "default": "percentile"
      },
      {
        "type": "checkbox",
        "id": "product_ratings_reviews",
        "label": "Enable product reviews and ratings ([?](https://apps.shopify.com/product-reviews))",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "product_social_sharing",
        "label": "Enable social sharing",
        "default": true
      },
      {
        "type": "select",
        "id": "product_slideshow_style",
        "label": "Slideshow aspect ratio",
        "info": "The background in the editor indicates the applied white space, but will not appear on your storefront.",
        "options": [
          { "group": "Uncropped", "value": "natural", "label": "Natural" },
          { "group": "Uncropped", "value": "short", "label": "Short (4:3)" },
          { "group": "Uncropped", "value": "square", "label": "Square (1:1)" },
          { "group": "Uncropped", "value": "tall", "label": "Tall (2:3)" },
          { "group": "Cropped", "value": "cropped-short", "label": "Short (4:3)" },
          { "group": "Cropped", "value": "cropped-square", "label": "Square (1:1)" },
          { "group": "Cropped", "value": "cropped-tall", "label": "Tall (2:3)" }
        ],
        "default": "natural"
      },
      {
        "type": "header",
        "content": "Product grid"
      },
      {
        "type": "checkbox",
        "id": "product_grid_show_second_image",
        "label": "Show second product image on hover",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "product_grid_emphasize_price",
        "label": "Emphasize price",
        "info": "Emphasizing the price will show the product's price above the title.",
        "default": true
      },
      {
        "type": "select",
        "id": "product_grid_image_style",
        "label": "Product aspect ratio",
        "info": "Using an uncropped setting will generate white space around the image to create a uniform grid without cropping your image. The background in the editor indicates the applied white space, but will not appear on your storefront.",
        "options": [
          { "group": "Uncropped", "value": "natural", "label": "Natural" },
          { "group": "Uncropped", "value": "small", "label": "Short (4:3)" },
          { "group": "Uncropped", "value": "medium", "label": "Square (1:1)" },
          { "group": "Uncropped", "value": "large", "label": "Tall (2:3)" },
          { "group": "Cropped", "value": "cropped-small", "label": "Short (4:3)" },
          { "group": "Cropped", "value": "cropped-medium", "label": "Square (1:1)" },
          { "group": "Cropped", "value": "cropped-large", "label": "Tall (2:3)" }
        ],
        "default": "natural"
      },
      {
        "type": "header",
        "content": "Quick shop"
      },
      {
        "type": "paragraph",
        "content": "Quick shop buttons show only on screens 1024px and wider."
      },
      {
        "type": "checkbox",
        "id": "product_grid_quick_shop",
        "label": "Show \"Quick shop\" button",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "product_grid_quick_buy",
        "label": "Show \"Add to cart\" button",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "quickshop_show_dcb",
        "label": "Show dynamic checkout button",
        "info": "Lets customers check out directly using a familiar payment method. [Learn more](https://help.shopify.com/manual/using-themes/change-the-layout/dynamic-checkout)",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "quickshop_product_cart_redirect",
        "label": "Enable cart redirection",
        "info": "Automatically sends users to the Cart page after adding a product.",
        "default": false
      }
    ]
  },
